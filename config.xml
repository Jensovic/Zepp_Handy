<?xml version='1.0' encoding='utf-8'?>

<widget id="com.jensovic.zepp.app" version="0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    
    <name>ZEpp</name>
    
    <description>It's a small world</description>
    
    <author email="jens@horing.com" href="http://horing.com">Jens Horing | Horing interactive</author>
    
    <content src="index.html" />
    
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-targetSdkVersion" value="22" />
    <preference name="android-build-tool" value="gradle" />    
    
    <!-- <preference name="orientation" value="portrait" /> //-->
    <preference name="fullscreen" value="false" />
    
    <preference name="StatusBarOverlaysWebView" value="false" />
    
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="4000" /> 
    <preference name="FadeSplashScreenDuration" value="1000"/>
    
    
    <platform name="android">
    
        <icon                   src="www/res/Android/res/drawable/icon.png" />          <!-- default 96x96 //-->
        
        <icon density="ldpi"    src="www/res/Android/res/drawable-ldpi/icon.png" />     <!-- 36x36   //-->
        <icon density="mdpi"    src="www/res/Android/res/drawable-mdpi/icon.png" />     <!-- 48x48   //-->
        <icon density="hdpi"    src="www/res/Android/res/drawable-hdpi/icon.png" />     <!-- 72x72   //-->
        <icon density="xhdpi"   src="www/res/Android/res/drawable-xhdpi/icon.png" />    <!-- 96x96   //-->
        <icon density="xxhdpi"  src="www/res/Android/res/drawable-xxhdpi/icon.png" />   <!-- 144x144 //-->
        <icon density="xxxhdpi" src="www/res/Android/res/drawable-xxxhdpi/icon.png" />  <!-- 192x192 //-->
        
        <splash                         src="www/res/Android/res/drawable/screen.png" />
        
        <splash density="land-ldpi"     src="www/res/Android/res/drawable-land-ldpi/screen.png" />
        <splash density="land-mdpi"     src="www/res/Android/res/drawable-land-mdpi/screen.png" />
        <splash density="land-hdpi"     src="www/res/Android/res/drawable-land-hdpi/screen.png" />
        <splash density="land-xhdpi"    src="www/res/Android/res/drawable-land-xhdpi/screen.png" />
        <splash density="land-xxhdpi"   src="www/res/Android/res/drawable-land-xxhdpi/screen.png" />
        <splash density="land-xxxhdpi"  src="www/res/Android/res/drawable-land-xxxhdpi/screen.png" />
        
        <splash density="port-ldpi"     src="www/res/Android/res/drawable-ldpi/screen.png" />
        <splash density="port-mdpi"     src="www/res/Android/res/drawable-mdpi/screen.png" />
        <splash density="port-hdpi"     src="www/res/Android/res/drawable-hdpi/screen.png" />
        <splash density="port-xhdpi"    src="www/res/Android/res/drawable-xhdpi/screen.png" />
        <splash density="port-xxhdpi"   src="www/res/Android/res/drawable-xxhdpi/screen.png" />
        <splash density="port-xxxhdpi"  src="www/res/Android/res/drawable-xxxhdpi/screen.png" />
                        
    </platform>
    
    <platform name="ios">
    
        <icon height="57"   width="57"  platform="ios" src="www/res/iOS/Resources/icons/Icon.png"  />
        
        <icon height="114"  width="114" platform="ios" src="www/res/iOS/Resources/icons/Icon@2x.png" />
        <icon height="40"   width="40"  platform="ios" src="www/res/iOS/Resources/icons/Icon-40.png"  />
        <icon height="80"   width="80"  platform="ios" src="www/res/iOS/Resources/icons/Icon-40@2x.png"  />
        <icon height="50"   width="50"  platform="ios" src="www/res/iOS/Resources/icons/Icon-50.png"  />
        <icon height="100"  width="100" platform="ios" src="www/res/iOS/Resources/icons/Icon-50@2x.png"  />
        <icon height="60"   width="60"  platform="ios" src="www/res/iOS/Resources/icons/Icon-60.png"  />
        <icon height="120"  width="120" platform="ios" src="www/res/iOS/Resources/icons/Icon-60@2x.png"  />
        <icon height="180"  width="180" platform="ios" src="www/res/iOS/Resources/icons/Icon-60@3x.png"  />
