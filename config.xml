        <icon height="76"   width="76"  platform="ios" src="www/res/iOS/Resources/icons/Icon-76.png"  />
        <icon height="152"  width="152" platform="ios" src="www/res/iOS/Resources/icons/Icon-76@2x.png"  />
        <icon height="167"  width="167" platform="ios" src="www/res/iOS/Resources/icons/Icon-167.png"  />
        <icon height="29"   width="29"  platform="ios" src="www/res/iOS/Resources/icons/Icon-small.png"  />
        <icon height="58"   width="58"  platform="ios" src="www/res/iOS/Resources/icons/Icon-small@2x.png"  />
        <icon height="87"   width="87"  platform="ios" src="www/res/iOS/Resources/icons/Icon-small@3x.png"  />
    
        <splash height="750"  width="768"   platform="ios" src="www/res/iOS/Resources/splash/Default.png"  />
        <splash height="960"  width="640"   platform="ios" src="www/res/iOS/Resources/splash/Default@2x~iphone_640x960.png"  />
