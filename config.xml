    <!-- <plugin name="cordova-plugin-vibration" spec="~2.1.5" /> //-->
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="^0.8.5" />
    <plugin name="cordova-plugin-android-permissions" spec="^1.0.0" />    
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-statusbar" spec="^2.3.0" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^6.0.4">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="Scanning QR-Codes" />
    </plugin>    
    <plugin name="cordova-plugin-nativestorage" spec="^2.2.2" />
    <plugin name="cordova-plugin-file" spec="4.3.3"/>
    <plugin name="cordova-plugin-file-transfer" spec="1.6.3"/>
    
    <!-- <plugin name="cordova-plugin-geolocation" spec="^3.0.0" /> //-->
    <plugin name="cordova-plugin-badge" spec="^0.8.5" />
    <plugin name="cordova-plugin-globalization" spec="^1.0.8" />            
    
    <plugin name="cordova-plugin-splashscreen" spec="^4.1.0" />
    <plugin name="cordova.plugins.diagnostic" spec="^3.7.2" />
        
</widget>
