    </platform>
    
    <platform name="wp8">
    
        <icon height="99"   width="99"  platform="wp8" src="www/res/WindowsPhone/Icons/ApplicationIcon-99x99.png"  />
        <icon height="159"  width="159" platform="wp8" src="www/res/WindowsPhone/Icons/Background.png"  />
    
        <splash height="1280" width="768" platform="wp8" src="www/res/WindowsPhone/Splashscreens/Splashscreen.png"  />
        
    </platform>
    
    <platform name="windows">
    
        <icon height="150"  width="150" platform="windows" src="www/res/WindowsStore/Icons/ApplicationIcon-150x150.png"  />
        <icon height="30"   width="30"  platform="windows" src="www/res/WindowsStore/Icons/ApplicationIcon-30x30.png"  />
        <icon height="50"   width="50"  platform="windows" src="www/res/WindowsStore/Icons/ApplicationIcon-50x50.png" />
      
        <splash height="300" width="620"  platform="windows" src="www/res/WindowsStore/Spashscreens/Splashscreen-620x300.png"  />
        
    </platform>
    
    
    <access origin="*" />
    
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <allow-navigation href="*://*.nxto.me/*" />
    <allow-navigation href="*://*.googleapis.com/*" />    
    <allow-navigation href="*://*.google.com/*" />    
    <allow-navigation href="*://*.gstatic.com/*" />    
    <allow-navigation href="*://*.googleusercontent.com/*" />    
    
    <!-- <allow-navigation href="*" /> //-->        
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <engine name="android" spec="~6.3.0" />
    <engine name="ios" spec="~4.5.3" />

    
    
    <preference name="permissions" value="none"/>
    
    
    <!-- <plugin name="cordova-plugin-battery-status" spec="~1.2.4" /> //-->
    <plugin name="cordova-plugin-camera" spec="~2.4.1" />
    <!-- <plugin name="cordova-plugin-media-capture" spec="~1.4.3" /> //-->
    <plugin name="cordova-plugin-device" spec="~1.1.6" />
    <!-- <plugin name="cordova-plugin-dialogs" spec="~1.3.3" /> //-->
