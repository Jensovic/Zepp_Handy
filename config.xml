        <splash height="2208" width="1242"  platform="ios" src="www/res/iOS/Resources/splash/Default-1242@3x~iphone6s-portrait_1242x2208.png"  />

        <splash height="1496" width="2048"  platform="ios" src="www/res/iOS/Resources/splash/Default-Landscape@2x~ipad_2048x1496.png"  />
        <splash height="1536" width="2048"  platform="ios" src="www/res/iOS/Resources/splash/Default-Landscape@2x~ipad_2048x1536.png"  />

        <splash height="748"  width="1024"  platform="ios" src="www/res/iOS/Resources/splash/Default-Landscape~ipad_1024x748.png"  />
        <splash height="768"  width="1024"  platform="ios" src="www/res/iOS/Resources/splash/Default-Landscape~ipad_1024x768.png"  />

        <splash height="2008" width="1536"  platform="ios" src="www/res/iOS/Resources/splash/Default-Portrait@2x~ipad_1536x2008.png"  />
